{
  "name": "oauth2-firebase-auth",
  "version": "0.2.2",
  "description": "This library provides OAuth2 server implementation for Firebase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint -p .",
    "format": "yarn internal:prettier --write",
    "internal:prettier": "prettier \"./*.{js,json,md,ts,ejs}\" \"./src/**/*.{js,json,md,ts,ejs}\"",
    "clean": "rm -rf dist",
    "clean:pack": "rm -f *.tgz",
    "build": "tsc",
    "build:watch": "tsc -w",
    "build:clean": "npm run clean:pack && npm run clean && npm run build",
    "package": "yarn build:clean && yarn pack",
    "release": "npm run build:clean && npm publish"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/chrisvxd/oauth2-firebase-auth.git"
  },
  "author": "Chris Villa <chrisvilla@me.com> (https://github.com/chrisvxd)",
  "license": "Apache-2.0",
  "homepage": "https://github.com/chrisvxd/oauth2-firebase-auth.git",
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/qs": "^6.9.7",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "oauth2-nodejs": "^0.2.0",
    "qs": "^6.9.4",
    "secure-random-string": "^1.1.0"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.9.0",
    "@types/ejs": "^2.6.0",
    "@types/express": "^4.17.1",
    "@types/node": "^18.11.18",
    "firebase-admin": "^10.3.0",
    "firebase-functions": "^3.24.1",
    "prettier": "^2.8.3",
    "tsc": "^2.0.4",
    "tslint": "^6.1.3",
    "typescript": "^4.9.5"
  }
}
